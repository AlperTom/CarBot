# CarBot UAT Environment Configuration Template
# Copy this file to .env.uat and configure with your actual values
# DO NOT commit .env.uat with real API keys to version control

# Environment
NODE_ENV=uat
NEXT_PUBLIC_APP_URL=https://your-uat-domain.com
NEXT_PUBLIC_ENVIRONMENT=uat

# OpenAI Configuration (Test environment)
OPENAI_API_KEY=your_openai_test_api_key_here
OPENAI_MODEL=gpt-3.5-turbo

# Supabase Configuration (UAT Database)
NEXT_PUBLIC_SUPABASE_URL=your_supabase_uat_project_url
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_supabase_uat_anon_key
SUPABASE_SERVICE_KEY=your_supabase_uat_service_key

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_test_stripe_secret_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_test_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# Workshop Configuration
NEXT_PUBLIC_CLIENT_KEY=carbot-uat-client
WORKSHOP_EMAIL=test@yourdomain.com

# Email Configuration (Test)
RESEND_API_KEY=your_test_resend_api_key
EMAIL_FROM=test@yourdomain.com
EMAIL_FROM_NAME=CarBot UAT
SMTP_ENABLED=true

# Security Configuration
NEXTAUTH_SECRET=your_uat_nextauth_secret_key_here
NEXTAUTH_URL=https://your-uat-domain.com

# Analytics Configuration
GOOGLE_ANALYTICS_ID=GA_UAT_MEASUREMENT_ID

# UAT Configuration
UAT_MODE=true
DEMO_DATA_ENABLED=true