{
  "name": "CarBot - KI-Kundenberatung für Autowerkstätten",
  "short_name": "CarBot",
  "description": "Intelligente KI-powered Kundenberatung und Terminbuchung für deutsche Autowerkstätten",
  "version": "2.0.0",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#1f2937",
  "theme_color": "#ea580c",
  "orientation": "portrait-primary",
  "scope": "/",
  "lang": "de-DE",
  "categories": ["business", "productivity", "automotive"],
  "screenshots": [
    {
      "src": "/screenshots/dashboard-desktop.webp",
      "sizes": "1280x800",
      "type": "image/webp",
      "platform": "wide",
      "label": "CarBot Dashboard - Desktop Ansicht"
    },
    {
      "src": "/screenshots/dashboard-mobile.webp", 
      "sizes": "390x844",
      "type": "image/webp",
      "platform": "narrow",
      "label": "CarBot Dashboard - Mobile Ansicht"
    },
    {
      "src": "/screenshots/chat-interface.webp",
      "sizes": "390x844", 
      "type": "image/webp",
      "platform": "narrow",
      "label": "KI Chat Interface"
    }
  ],
  "icons": [
    {
      "src": "/icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-96x96.png", 
      "sizes": "96x96",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-128x128.png",
      "sizes": "128x128", 
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "maskable any"
    },
    {
      "src": "/icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png",
      "purpose": "maskable"
    },
    {
      "src": "/icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "purpose": "maskable any"
    }
  ],
  "shortcuts": [
    {
      "name": "Dashboard",
      "short_name": "Dashboard", 
      "description": "Öffne das CarBot Dashboard",
      "url": "/dashboard",
      "icons": [
        {
          "src": "/icons/shortcut-dashboard.png",
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Neue Nachricht",
      "short_name": "Chat",
      "description": "Starte einen neuen Chat",
      "url": "/dashboard/chat",
      "icons": [
        {
          "src": "/icons/shortcut-chat.png", 
          "sizes": "96x96",
          "type": "image/png"
        }
      ]
    },
    {
      "name": "Analytics",
      "short_name": "Analytics",
      "description": "Zeige Werkstatt Analytics",
      "url": "/dashboard/analytics",
      "icons": [
        {
          "src": "/icons/shortcut-analytics.png",
          "sizes": "96x96", 
          "type": "image/png"
        }
      ]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://carbot.chat",
      "id": "carbot-web-app"
    }
  ],
  "prefer_related_applications": false,
  "edge_side_panel": {
    "preferred_width": 400
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  },
  "protocol_handlers": [
    {
      "protocol": "web+carbot",
      "url": "/handle/%s"
    }
  ],
  "file_handlers": [
    {
      "action": "/dashboard/import",
      "accept": {
        "text/csv": [".csv"],
        "application/json": [".json"]
      }
    }
  ],
  "handle_links": "preferred",
  "capture_links": "existing-client-navigate"
}