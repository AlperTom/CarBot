# CarBot Environment Configuration
# Copy this file to .env.local and fill in your actual values

# === Database Configuration ===
# Supabase Project Settings (from your Supabase dashboard)
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your_anon_key_here
SUPABASE_SERVICE_ROLE_KEY=your_service_role_key_here

# === Authentication ===
# JWT Secret for token signing (generate a secure random string)
JWT_SECRET=your_super_secure_jwt_secret_min_32_chars_long
JWT_EXPIRES_IN=24h
REFRESH_TOKEN_EXPIRES_IN=7d

# === OpenAI Configuration ===
# For AI chat functionality
OPENAI_API_KEY=sk-your_openai_api_key_here

# === Development Settings ===
NODE_ENV=development
# Set to 'true' to use mock client keys and data
USE_MOCK_KEYS=true

# === Application Settings ===
# Base URL for your application
NEXT_PUBLIC_APP_URL=http://localhost:3000
# Default client key for development testing
NEXT_PUBLIC_DEFAULT_CLIENT_KEY=ck_test_klassische_werkstatt_123

# === Email Configuration (Optional) ===
# For sending transactional emails
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
FROM_EMAIL=noreply@your-domain.com

# === Payment Processing (Optional) ===
# Stripe configuration for subscriptions
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# === Analytics (Optional) ===
# Google Analytics
NEXT_PUBLIC_GA_ID=GA_MEASUREMENT_ID
# Hotjar or other analytics
HOTJAR_ID=your_hotjar_id

# === Storage (Optional) ===
# For file uploads and assets
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=eu-central-1
AWS_S3_BUCKET=carbot-uploads

# === Redis (Optional - for production caching) ===
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# === Performance & Monitoring ===
# Enable detailed logging
ENABLE_DEBUG_LOGS=true
# Performance monitoring
ENABLE_PERFORMANCE_TRACKING=true

# === Workshop Templates ===
# Default template configurations
DEFAULT_TEMPLATE_TYPE=klassische
ENABLE_ALL_TEMPLATES=true

# === Rate Limiting ===
# API rate limits
DEFAULT_RATE_LIMIT_PER_MINUTE=100
CHAT_RATE_LIMIT_PER_MINUTE=20

# === German Market Settings ===
# Localization settings
DEFAULT_LOCALE=de-DE
DEFAULT_TIMEZONE=Europe/Berlin
DEFAULT_CURRENCY=EUR

# === GDPR Compliance ===
# Cookie consent and data processing
ENABLE_COOKIE_CONSENT=true
COOKIE_DOMAIN=.yourdomain.com
DATA_RETENTION_DAYS=365

# === Webhook Endpoints ===
# Stripe webhooks
STRIPE_WEBHOOK_ENDPOINT=/api/webhooks/stripe
# Other webhook endpoints
GENERIC_WEBHOOK_SECRET=your_webhook_verification_secret