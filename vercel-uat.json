{
  "version": 2,
  "name": "carbot-uat",
  "framework": "nextjs",
  "regions": ["fra1"],
  "env": {
    "NODE_ENV": "uat",
    "UAT_MODE": "true",
    "DEMO_DATA_ENABLED": "true"
  },
  "build": {
    "env": {
      "NODE_ENV": "uat"
    }
  },
  "functions": {
    "app/api/**/*.js": {
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/api/(.*)",
      "headers": [
        {
          "key": "X-Environment",
          "value": "UAT"
        },
        {
          "key": "X-Demo-Mode",
          "value": "true"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/",
      "destination": "/pricing",
      "permanent": false
    }
  ]
}