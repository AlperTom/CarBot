# CarBot UAT Environment Configuration
# Copy this file to .env.local for UAT testing

# Environment
NODE_ENV=uat
NEXT_PUBLIC_APP_URL=https://carbot-uat.vercel.app
NEXT_PUBLIC_ENVIRONMENT=uat

# OpenAI Configuration (Test)
OPENAI_API_KEY=sk-test-your-openai-key-here
OPENAI_MODEL=gpt-3.5-turbo

# Supabase Configuration (UAT Database)
NEXT_PUBLIC_SUPABASE_URL=https://your-uat-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-uat-supabase-anon-key
SUPABASE_SERVICE_KEY=your-uat-supabase-service-key

# Stripe Configuration (Test Mode)
STRIPE_SECRET_KEY=sk_test_your_stripe_test_key
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_test_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_test_webhook_secret

# Stripe Test Price IDs
STRIPE_STARTER_MONTHLY_PRICE_ID=price_test_starter_monthly
STRIPE_STARTER_YEARLY_PRICE_ID=price_test_starter_yearly
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_test_professional_monthly
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_test_professional_yearly
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_test_enterprise_monthly
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_test_enterprise_yearly

# UAT Specific Configuration
NEXT_PUBLIC_CLIENT_KEY=uat-demo-client
NEXT_PUBLIC_ADMIN_KEY=carbot-uat-admin-2024
UAT_MODE=true
DEMO_DATA_ENABLED=true

# Email Configuration (Test)
SMTP_ENABLED=true
WORKSHOP_EMAIL=uat-test@carbot.de
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=uat-test@carbot.de
SMTP_PASS=your-test-email-password

# Security Configuration
NEXTAUTH_SECRET=your-uat-nextauth-secret-key
NEXTAUTH_URL=https://carbot-uat.vercel.app

# Analytics Configuration (Test)
GOOGLE_ANALYTICS_ID=GA_UAT_MEASUREMENT_ID

# UAT Database Seeding
SEED_DEMO_DATA=true
DEMO_WORKSHOPS_COUNT=5
DEMO_CLIENTS_COUNT=20
DEMO_CONVERSATIONS_COUNT=100