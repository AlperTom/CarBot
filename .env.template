# CarBot Environment Template
# Copy this to .env.local for development
# NEVER commit real API keys to version control

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
NEXT_PUBLIC_CLIENT_KEY=your-client-key
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-secure-64-character-hex-string-here

# Email Configuration
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=CarBot

# Workshop Configuration
WORKSHOP_EMAIL=contact@yourdomain.com

# Development Configuration
NODE_ENV=development
UAT_MODE=true
DEMO_DATA_ENABLED=true
SMTP_ENABLED=true

# Stripe Payment Configuration
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key_here
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret_here

# Stripe Price IDs for subscription tiers
STRIPE_STARTER_MONTHLY_PRICE_ID=price_starter_monthly_id_here
STRIPE_STARTER_YEARLY_PRICE_ID=price_starter_yearly_id_here
STRIPE_PROFESSIONAL_MONTHLY_PRICE_ID=price_professional_monthly_id_here
STRIPE_PROFESSIONAL_YEARLY_PRICE_ID=price_professional_yearly_id_here
STRIPE_ENTERPRISE_MONTHLY_PRICE_ID=price_enterprise_monthly_id_here
STRIPE_ENTERPRISE_YEARLY_PRICE_ID=price_enterprise_yearly_id_here