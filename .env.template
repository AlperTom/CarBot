# CarBot Environment Template
# Copy this to .env.local for development
# NEVER commit real API keys to version control

# Supabase Configuration
NEXT_PUBLIC_SUPABASE_URL=https://your-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-supabase-anon-key-here
SUPABASE_SERVICE_KEY=your-supabase-service-key-here
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key-here

# OpenAI Configuration
OPENAI_API_KEY=your-openai-api-key-here

# Application Configuration
NEXT_PUBLIC_CLIENT_KEY=your-client-key
NEXT_PUBLIC_APP_URL=http://localhost:3000
NEXT_PUBLIC_SITE_URL=http://localhost:3000

# Security Configuration
JWT_SECRET=your-secure-64-character-hex-string-here

# Email Configuration
RESEND_API_KEY=your-resend-api-key-here
EMAIL_FROM=noreply@yourdomain.com
EMAIL_FROM_NAME=CarBot

# Workshop Configuration
WORKSHOP_EMAIL=contact@yourdomain.com

# Development Configuration
NODE_ENV=development
UAT_MODE=true
DEMO_DATA_ENABLED=true
SMTP_ENABLED=true